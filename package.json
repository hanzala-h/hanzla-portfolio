{
  "name": "portfolio",
  "version": "0.1.0",
  "description": "Personal portfolio website of Muhammad Hanzla",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev --workspace=client\" \"npm run dev --workspace=server\"",
    "build": "npm run build --workspace=client",
    "preview": "npm run preview --workspace=client",
    "start": "npm run start --workspace=server",
    "lint": "concurrently \"npm run lint --workspace=client\" \"npm run lint --workspace=server\"",
    "lint:fix": "concurrently \"npm run lint:fix --workspace=client\" \"npm run lint:fix --workspace=server\"",
    "format": "concurrently \"npm run format --workspace=client\" \"npm run format --workspace=server\"",
    "format:fix": "concurrently \"npm run format:fix --workspace=client\" \"npm run format:fix --workspace=server\"",
    "test": "echo \"No tests yet\"",
    "prepare": "husky"
  },
  "keywords": [
    "portfolio",
    "personal-website",
    "muhammad-hanzla",
    "hanzla"
  ],
  "author": {
    "name": "Muhammad Hanzla",
    "email": "sayhi.hanzla@gmail.com"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hanzla/portfolio.git"
  },
  "bugs": {
    "url": "https://github.com/hanzla/portfolio/issues"
  },
  "engines": {
    "node": ">=22.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.35.0",
    "concurrently": "^9.2.1",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "globals": "^16.3.0",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.6"
  },
  "lint-staged": {
    "*.{js,jsx,json,css,md}": [
      "npm run format:fix",
      "npm run lint:fix"
    ]
  },
  "dependencies": {
    "body-scroll-lock": "^4.0.0-beta.0"
  }
}
